            <Setter Property="TextColor" Value="#8E8E8E"/>
          </Style>
          <Style TargetType="Entry">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="PlaceholderColor" Value="#B3B3B4"/>
            <Setter Property="TextColor" Value="Black"/>
          </Style>
          <Style TargetType="local:PickerEx">
            <Setter Property="BackgroundColor" Value="Silver"/>
            <Setter Property="PlaceholderColor" Value="Gray"/>
            <Setter Property="TextColor" Value="Black"/>
          </Style>
          <Style TargetType="ListView">
            <Setter Property="SeparatorVisibility" Value="Default"/>
            <Setter Property="SeparatorColor" Value="Black"/>
          </Style>

          <!-- Login styles -->
          <Style x:Key="LoginEntry" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#598498"/>
            <Setter Property="PlaceholderColor" Value="Silver"/>
            <Setter Property="TextColor" Value="White"/>
          </Style>
          <Style x:Key="LoginPicker" TargetType="local:PickerEx">
            <Setter Property="BackgroundColor" Value="#598498"/>
            <Setter Property="PlaceholderColor" Value="Silver"/>
            <Setter Property="TextColor" Value="White"/>
          </Style>
        </ResourceDictionary>
      </OnPlatform.WinPhone>
    </OnPlatform>
  </Application.Resources>
</Application>