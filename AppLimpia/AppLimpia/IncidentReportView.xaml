<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AppLimpia;assembly=AppLimpia"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:IncidentReportViewModel}"
             x:Class="AppLimpia.IncidentReportView"
             BackgroundColor="#E3E4E5">
  <Grid HorizontalOptions="Fill"
        VerticalOptions="Fill"
        RowSpacing="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- View header -->
    <Grid Grid.Column="0"
          Grid.Row="0"
          BackgroundColor="#004D72">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <BoxView Grid.Column="0"
               Grid.Row="0"
               BackgroundColor="#3680BE"/>
      <Image Grid.Column="0"
             Grid.Row="0"
             Margin="5">
        <Image.WidthRequest>
          <OnPlatform x:TypeArguments="x:Double" iOS="32" Android="32" WinPhone="48"/>
        </Image.WidthRequest>
        <Image.HeightRequest>
          <OnPlatform x:TypeArguments="x:Double" iOS="32" Android="32" WinPhone="48"/>
        </Image.HeightRequest>
        <Image.Source>
          <OnPlatform x:TypeArguments="ImageSource"
                      iOS="BackButton.png"
                      Android="back_button.png"
                      WinPhone="Assets/BackButton.png"/>
        </Image.Source>
        <Image.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnCanceled"/>
        </Image.GestureRecognizers>
      </Image>
      <Label Grid.Column="1"
             Grid.Row="0"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             Style="{DynamicResource LoginTitleLabel}"
             Text="{Binding Pin.Label}"/>
    </Grid>

    <!-- Main content -->
    <StackLayout Grid.Column="0"
                 Grid.Row="1"
                 Orientation="Vertical"
                 HorizontalOptions="Fill"
                 Padding="30,10">
      <!-- Incident report fields -->
      <local:PickerEx x:Name="PickerIncidentTypes"
                      HorizontalOptions="FillAndExpand"
                      PlaceholderText="{local:Localize IncidentType}"
                      SelectedIndex="{Binding IncidentTypeIndex}"/>

      <!-- Incident report photo -->
      <Image x:Name="Image1"
             IsVisible="False">
        <Image.WidthRequest>
          <OnPlatform x:TypeArguments="x:Double" iOS="300" Android="300" WinPhone="450"/>
        </Image.WidthRequest>
        <Image.HeightRequest>
          <OnPlatform x:TypeArguments="x:Double" iOS="300" Android="300" WinPhone="450"/>
        </Image.HeightRequest>
      </Image>
      
      <!-- Control buttons -->
      <!-- TODO: Convert to command -->
      <Button Style="{DynamicResource BlueButton}"
              HorizontalOptions="FillAndExpand"
              Text="{local:Localize TakePhoto}"
              Clicked="OnTakePhoto"/>
      <Button Style="{DynamicResource GreenButton}"
              HorizontalOptions="FillAndExpand"
              Text="{local:Localize SendReport}"
              Command="{Binding ReportIncidentCommand}"/>
      <!-- TODO: Convert to command -->
      <Button Style="{DynamicResource CancelButton}"
              HorizontalOptions="FillAndExpand"
              Text="{local:Localize Cancel}"
              Clicked="OnCanceled"/>
    </StackLayout>

    <!-- Activity indicator -->
    <Grid Grid.Column="0"
          Grid.Row="0"
          Grid.RowSpan="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <ActivityIndicator Grid.Column="1"
                         Grid.Row="1"
                         HeightRequest="64"
                         WidthRequest="64"
                         IsRunning="{Binding IsBusy}"/>
    </Grid>
  </Grid>
</ContentPage>